		<defName>BOT_SleepyHeadContinuesSleeping</defName>
		<validWhileDespawned>true</validWhileDespawned>
		<durationDays>0.0083</durationDays>
		<requiredTraits>
			<li>BOT_Sleepyhead</li>
		</requiredTraits>
		<stages>
			<li>
				<label>sleepyhead continues sleeping</label>
