<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!-- Nyctophobia Darkness Double debuff -->
	<ThoughtDef>
		<defName>BOT_EnvironmentDark</defName>
		<workerClass>ThoughtWorker_Dark</workerClass>
		<stages>
			<li>
				<label>darkness</label>
				<description>I've been in the dark for a while. I really don't like it.</description>
				<baseMoodEffect>-10</baseMoodEffect>
			</li>
		</stages>
		<requiredTraits>
			<li>BOT_Nyctophobia</li>
		</requiredTraits>
	</ThoughtDef>

	<ThoughtDef>
		<defName>BOT_NyctophobiaCantSleep</defName>
		<validWhileDespawned>true</validWhileDespawned>
		<durationDays>0.25</durationDays>
		<requiredTraits>
			<li>BOT_Nyctophobia</li>
		</requiredTraits>
		<stages>
			<li>
				<label>nyctophobic can't sleep</label>
				<description>It's too dark in here. I can't sleep like this.</description>
				<baseMoodEffect>-1</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
</Defs>
