<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!-- Sadist Thoughts -->
	<ThoughtDef>
		<defName>BOT_WitnessedDamageSadist</defName>
		<durationDays>4</durationDays>
		<stackLimit>20</stackLimit>
		<requiredTraits>
			<li>BOT_Sadist</li>
		</requiredTraits>
		<stages>
			<li>
				<label>witnessed pain with sadism</label>
				<description>Seeing them suffering in pain is the greatest pleasure of them all. I could watch it all day.</description>
				<baseMoodEffect>1</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<ThoughtDef>
		<defName>BOT_HurtHumanlikeSadist</defName>
		<durationDays>4</durationDays>
		<stackLimit>30</stackLimit>
		<requiredTraits>
			<li>BOT_Sadist</li>
		</requiredTraits>
		<stages>
			<li>
				<label>hurt someone</label>
				<description>I'm causing pain and suffering! Their screams are like music to my ears!</description>
				<baseMoodEffect>1</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<ThoughtDef>
		<defName>BOT_HarvestedOrgan_Sadist</defName>
		<durationDays>4</durationDays>
		<requiredTraits>
			<li>BOT_Sadist</li>
		</requiredTraits>
		<stages>
			<li>
				<label>sadist organ harvested</label>
				<description>A little bit of this, a little bit of that.. Isn't it great making them into something more valueable?</description>
				<baseMoodEffect>4</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<ThoughtDef>
		<defName>BOT_ClaustrophobicBreakRecovered</defName>
		<durationDays>1</durationDays>
		<stages>
			<li>
				<label>It's finally over</label>
				<description>I thought it was never going to end..</description>
				<baseMoodEffect>5</baseMoodEffect>
			</li>
		</stages>
		<requiredTraits>
			<li>BOT_Claustrophobic</li>
		</requiredTraits>
	</ThoughtDef>
</Defs>
