<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThoughtDef>
		<defName>BOT_ClaustrophobicConfinedSpace</defName>
		<workerClass>More_Traits.ThoughtWorkers.ThoughtWorker_Claustrophobic</workerClass>
		<stages>
			<li>
				<label>cramped space</label>
				<description>I need to get out of here! I can't breathe..! The walls..</description>
				<baseMoodEffect>-15</baseMoodEffect>
			</li>
			<li>
				<label>rather tight</label>
				<description>There really isn't enough space in here, it feels as if the walls are closing in.</description>
				<baseMoodEffect>-8</baseMoodEffect>
			</li>
		</stages>
		<requiredTraits>
			<li>BOT_Claustrophobic</li>
		</requiredTraits>
	</ThoughtDef>
	
	<ThoughtDef>
		<defName>BOT_ClaustrophobicBreakRecovered</defName>
		<durationDays>1</durationDays>
		<stages>
			<li>
				<label>It's finally over</label>
				<description>I thought it was never going to end..</description>
				<baseMoodEffect>5</baseMoodEffect>
			</li>
		</stages>
		<requiredTraits>
			<li>BOT_Claustrophobic</li>
		</requiredTraits>
	</ThoughtDef>
</Defs>
